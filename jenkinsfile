// @Library es una directiva en Jenkins para cargar la librer√≠a compartida
@Library('devops@master') _

pipeline {
    agent any
    
    tools {
        // Definir la herramienta Node.js con el nombre 'nodejs'
        nodejs 'nodejs'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Clonar el repositorio desde GitHub
                    git url: 'https://github.com/edansanmar/JavaScript-Capstone.git'
                    echo 'pasado'
                }
            }
        }

        /*stage ('Build') {
            steps {
                script { 
                    sh 'npm install'
                }
            }
        }*/
    }
}
