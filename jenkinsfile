pipeline {
    agent any
    
    tools {
        // Definir la herramienta Node.js con el nombre 'nodejs'
        nodejs 'nodejs'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Clonar el repositorio desde GitHub
                    git url: 'https://github.com/edansanmar/JavaScript-Capstone.git'
                    echo 'Pas贸 la etapa de Checkout'
                }
            }
        }

        stage('Install Dependecias') {
            steps {
                script { 
                    // Proceso para instalar las dependencias 'npm install'
                    sh 'npm install'
                    echo 'Pas贸 la etapa de Build'
                }
            }
        }
        stage('Build'){
            steps {
                script {
                    //Construtir la aplicaci贸n React
                    sh 'npm run build'
                }
            }
        }
        stage('Test'){
            steps{
                script {
                    //Ejecutar pruebas 
                    sh 'npm test'
                    echo 'Finalizaci贸n del Pipeline, hasta el momento.'
                }
            }
        }
    }
}
